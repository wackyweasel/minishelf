{
  "name": "minishelf",
  "version": "1.0.0",
  "description": "Miniature board game collection manager",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --watch server --ext ts --exec ts-node server/index.ts",
    "client:dev": "cd client && npm run dev",
    "build:server": "tsc -p server/tsconfig.json",
    "build:client": "cd client && vite build",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server/index.js"
  },
  "keywords": [
    "miniatures",
    "collection",
    "board-games"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.5",
    "sql.js": "^1.10.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
